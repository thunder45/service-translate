{
  "name": "service-translate",
  "version": "2.0.0",
  "description": "Real-time audio translation service with TTS client applications",
  "main": "index.js",
  "scripts": {
    "setup": "npx ts-node scripts/setup-local-environment.ts",
    "setup:dev": "NODE_ENV=development npx ts-node scripts/setup-local-environment.ts",
    "build": "npm run build:server && npm run build:capture",
    "build:server": "cd src/websocket-server && npm run build",
    "build:capture": "cd src/capture && npm run build",
    "start": "./start-service-translate.sh",
    "start:local": "npx ts-node scripts/deployment-manager.ts local",
    "start:network": "npx ts-node scripts/deployment-manager.ts network",
    "start:cloud": "npx ts-node scripts/deployment-manager.ts cloud",
    "start:server": "npx ts-node scripts/start-websocket-server.ts",
    "start:pwa": "npx ts-node scripts/start-pwa-server.ts",
    "start:capture": "cd src/capture && npm run start",
    "start:dev": "npm run build && concurrently \"npm run start:server\" \"npm run start:pwa\"",
    "install:all": "npm install && cd src/websocket-server && npm install && cd ../capture && npm install && cd ../client-pwa && npm install",
    "clean": "rm -rf src/*/dist src/*/node_modules node_modules audio-cache logs temp",
    "maintenance": "npx ts-node scripts/maintenance.ts",
    "maintenance:stats": "npx ts-node scripts/maintenance.ts stats",
    "security:audit": "npx ts-node scripts/security-config.ts",
    "security:generate": "npx ts-node scripts/security-config.ts generate",
    "test": "npm run test:server",
    "test:server": "cd src/websocket-server && npm test",
    "docs": "echo 'Documentation files: README.md, CONNECTION_INSTRUCTIONS.md, DEPLOYMENT_SUMMARY.md'"
  },
  "dependencies": {
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "@aws-sdk/client-cognito-identity-provider": "^3.901.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "translation",
    "tts",
    "websocket",
    "real-time",
    "aws-polly",
    "pwa"
  ],
  "author": "Service Translate Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}