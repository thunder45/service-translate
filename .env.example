# Service Translate - Local Deployment Environment Configuration
# Copy this file to .env and configure your local environment

# =============================================================================
# AWS Configuration for TTS Services
# =============================================================================

# AWS Credentials (Required for Polly TTS)
# Option 1: Use AWS CLI credentials (recommended)
# Run: aws configure
# AWS_PROFILE=default

# Option 2: Direct credentials (not recommended for production)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here
# AWS_REGION=us-east-1

# AWS Polly Configuration
AWS_POLLY_REGION=us-east-1
AWS_POLLY_VOICE_ENGINE=neural
AWS_POLLY_OUTPUT_FORMAT=mp3

# =============================================================================
# Local WebSocket Server Configuration
# =============================================================================

# Server Network Configuration
WEBSOCKET_HOST=localhost
WEBSOCKET_PORT=3001
WEBSOCKET_CORS_ORIGIN=*

# HTTP Server for PWA and Audio Files
HTTP_SERVER_PORT=3000
HTTP_SERVER_HOST=0.0.0.0

# Session Configuration
SESSION_ID_PREFIX=CHURCH
SESSION_TIMEOUT_MINUTES=480
MAX_CONCURRENT_SESSIONS=5

# =============================================================================
# Audio Storage Configuration
# =============================================================================

# Local Audio Storage
AUDIO_STORAGE_PATH=./audio-cache
AUDIO_CACHE_SIZE_MB=500
AUDIO_CLEANUP_INTERVAL_HOURS=24
AUDIO_MAX_AGE_HOURS=48

# Audio Quality Settings
AUDIO_BITRATE=128
AUDIO_SAMPLE_RATE=22050
AUDIO_CHANNELS=1

# =============================================================================
# Security Configuration
# =============================================================================

# Basic Authentication (Optional)
ENABLE_AUTH=false
AUTH_USERNAME=admin
AUTH_PASSWORD=changeme123

# Rate Limiting
POLLY_RATE_LIMIT_PER_MINUTE=60
WEBSOCKET_RATE_LIMIT_PER_SECOND=10
MAX_CLIENTS_PER_SESSION=50

# Session Security
SESSION_SECRET=your-secret-key-here-change-this
SECURE_SESSION_IDS=true

# =============================================================================
# Deployment Scenarios
# =============================================================================

# Deployment Mode
# local: Single machine deployment (admin + server on same machine)
# network: Local network deployment (server accessible via LAN)
# cloud: Cloud deployment (server hosted remotely)
DEPLOYMENT_MODE=local

# Network Discovery
ENABLE_MDNS=true
SERVICE_NAME=service-translate

# =============================================================================
# Monitoring and Logging
# =============================================================================

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/service-translate.log
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true

# Cost Tracking
ENABLE_COST_TRACKING=true
COST_WARNING_THRESHOLD_USD=3.00
COST_ALERT_INTERVAL_MINUTES=15

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
AUDIO_LATENCY_THRESHOLD_MS=2000
WEBSOCKET_PING_INTERVAL_MS=30000

# =============================================================================
# Development Configuration
# =============================================================================

# Development Mode
NODE_ENV=production
DEBUG_MODE=false
ENABLE_HOT_RELOAD=false

# Testing Configuration
ENABLE_TEST_ENDPOINTS=false
MOCK_AWS_SERVICES=false